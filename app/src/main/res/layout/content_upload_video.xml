<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_all"
    android:elevation="4dp"
    tools:context="com.erginus.klips.UploadSongActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:id="@+id/ll_navi"

        android:background="@color/grey"
        android:gravity="center_vertical"

        >
        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|left"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/arrow_back"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Video"
            android:textSize="20sp"
            android:paddingLeft="72dp"

            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="visible"
            android:id="@+id/toolbar_title" />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:layout_weight="1"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter the Details Below"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/textView10"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user_name"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:hint="Video Name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:id="@+id/editText" />

        <requestFocus/>
      <!--  <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/spinner_album"
            android:drawSelectorOnTop="true"
            android:background="@drawable/dropdown"
            android:popupBackground="@color/lightpurple"
            android:layout_marginTop="10dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawSelectorOnTop="true"
            android:background="@drawable/dropdown"
            android:popupBackground="@color/lightpurple"
            android:id="@+id/spinner_artist"
            android:layout_marginTop="10dp"/>-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="15dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="Select Image"
                android:background="@drawable/button"
                android:drawableLeft="@drawable/image"
                android:drawablePadding="10dp"
                android:textSize="14sp"
                android:padding="3dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:id="@+id/button_select_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Thumbnail(*.jpg,.png)"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView11"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="15dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="Select Video"
                android:background="@drawable/button"
                android:drawableLeft="@drawable/videoupload"
                android:drawablePadding="10dp"
                android:textSize="14sp"
                android:padding="3dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:id="@+id/button_select_video"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="Video File(*mp3 max size:10mb)"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView_songsize"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Add Video"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:id="@+id/button_add"
            />
    </LinearLayout>

</LinearLayout>
