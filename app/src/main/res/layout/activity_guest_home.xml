<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:layout_height="fill_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />


        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home">


            <LinearLayout  android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    >

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_weight="1"
                    >
                    <!--  <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@android:color/white"
                          android:textSize="14sp"
                          android:text="Select From Wheel Menu"

                          android:layout_marginLeft="10dp"
                          android:layout_marginBottom="1dp"

                          android:id="@+id/textV"/>-->
                    <LinearLayout
                        android:layout_width="325dp"
                        android:layout_height="325dp"
                        android:orientation="vertical"
                        android:background="@drawable/wheel"
                        android:layout_gravity="center_horizontal"
                        >
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"

                            >
                            <ImageView
                                android:id="@+id/video"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="55dp"
                                android:layout_weight="1"
                                android:layout_marginTop="60dp"
                                android:src="@drawable/music"
                                />
                            <ImageView
                                android:id="@+id/search"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="50dp"
                                android:src="@drawable/search"
                                />
                            <ImageView
                                android:id="@+id/audio"
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:layout_marginRight="55dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/music_2"
                                android:layout_marginTop="60dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            >
                            <ImageView
                                android:id="@+id/favourites"
                                android:layout_width="wrap_content"
                                android:layout_height="13dp"
                                android:layout_marginTop="42dp"
                                android:src="@drawable/fav"
                                android:layout_weight="1"
                                android:layout_marginLeft="17dp"
                                android:padding="1dp"

                                />
                            <ImageView
                                android:id="@+id/play_random"
                                android:layout_width="77dp"
                                android:layout_height="75dp"
                                android:src="@drawable/lucky"
                                android:layout_marginTop="9dp"


                                />
                            <ImageView
                                android:id="@+id/downloads"
                                android:layout_width="wrap_content"
                                android:layout_height="13dp"
                                android:layout_weight="1"
                                android:layout_marginTop="42dp"
                                android:src="@drawable/tre"
                                android:layout_marginRight="22dp"
                                android:padding="1dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:layout_marginTop="20dp"
                            >
                            <ImageView
                                android:id="@+id/quotes"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="55dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/quotes"
                                />
                            <ImageView
                                android:id="@+id/playlist"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/play"
                                />
                            <ImageView
                                android:id="@+id/gallry"
                                android:layout_weight="1"
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="55dp"
                                android:layout_marginTop="5dp"

                                android:src="@drawable/images"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="vertical"
                    android:clickable="true"

                    android:gravity="center_horizontal|bottom"
                    android:focusable="false"
                    android:id="@+id/dragView">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="12dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:id="@+id/image_product"
                        android:adjustViewBounds="true"
                        android:isScrollContainer="true"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/arrow_change"/>
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>



    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@drawable/bg_all"

        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:theme="@style/list_item_appearance"
        app:menu="@menu/drawer_guest_menu" >


    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>